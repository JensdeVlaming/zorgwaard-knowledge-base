{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "streamlit run app.py --server.port=$PORT --server.address=0.0.0.0",
    "healthcheckPath": "/_stcore/health",
    "numReplicas": {
      "min": 0,
      "max": 1
    }
  },
  "plugins": [
    {
      "name": "postgres",
      "package": "postgresql"
    }
  ],
  "variables": {
    "DATABASE_URL": {
      "fromPlugin": "postgres",
      "name": "DATABASE_URL"
    }
  }
}
