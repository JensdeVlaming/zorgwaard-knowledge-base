{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "startCommand": "sh -c 'python -m infrastructure.railway.bootstrap && streamlit run app.py --server.port=$PORT --server.address=0.0.0.0'",
    "healthcheckPath": "/_stcore/health",
    "numReplicas": 1
  }
}
